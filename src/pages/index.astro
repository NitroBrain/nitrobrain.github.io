  { name: 'styled_print', description: 'A flexible terminal text styling utility for color, background, and custom formatting options.', html_url: 'https://github.com/NitroBrain/styled_print', private: false, archived: false },
  { name: 'voice-js', description: 'Web Speech API', html_url: 'https://github.com/NitroBrain/voice-js', private: false, archived: false },
  { name: 'pencil_art', description: 'This package converts image to sketch', html_url: 'https://github.com/NitroBrain/pencil_art', private: false, archived: false },
  { name: 'simple-translate', description: 'Multi language translator Library for Python', html_url: 'https://github.com/NitroBrain/simple-translate', private: false, archived: false },
  { name: 'gcd-calculator', description: 'Greatest Common Divisor Calculator', html_url: 'https://github.com/NitroBrain/gcd-calculator', private: false, archived: false },
  { name: 'styled-console', description: 'A package to display styled messages in the console, enhancing logging aesthetics.', html_url: 'https://github.com/NitroBrain/styled-console', private: false, archived: false },
  { name: 'kill-the-monsters-3d', description: 'Kill the monsters | 3D Video Game for PC', html_url: 'https://github.com/NitroBrain/kill-the-monsters-3d', private: false, archived: false }
];

let repos = [];
try {
  const res = await fetch('https://api.github.com/orgs/NitroBrain/repos?per_page=100&type=public&sort=updated', {
    headers: {
    },
  });
  if (!res.ok) {
    console.error(`GitHub API error: ${res.status} ${res.statusText}`);
    repos = fallbackRepos; 
  } else {
    const data = await res.json();
    if (Array.isArray(data)) {
      repos = data;
    } else {
      console.error('GitHub API did not return an array:', data);
      repos = fallbackRepos;
    }
  }
} catch (error) {
  console.error('Failed to fetch GitHub repos:', error);
  repos = fallbackRepos;
}

const blacklist = ['.github', 'infra', 'infrastructure', 'docs', 'website', 'nitrobrain.github.io'];
if (repos.length > 0) {
  repos = repos.filter(
    (repo) =>
      !repo.private &&
      !repo.archived &&
      !blacklist.includes(repo.name.toLowerCase()) &&
      !repo.name.startsWith('.')
  );
}

function getProjectEmoji(repo) {
  const name = repo.name.toLowerCase();
  const desc = (repo.description || '').toLowerCase();
  if (name.includes('vim') || name.includes('editor')) return '📝';
  if (name.includes('game') || name.includes('fun')) return '🎮';
  if (name.includes('style') || name.includes('css')) return '🎨';
  if (name.includes('console') || name.includes('logger')) return '🖥️';
  if (name.includes('calc') || name.includes('math') || name.includes('gcd')) return '➗';
  if (name.includes('voice') || name.includes('speech')) return '🎤';
  if (name.includes('translate') || name.includes('lang')) return '🌐';
  if (name.includes('infra') || name.includes('deploy')) return '🛠️';
  if (name.includes('art') || name.includes('sketch')) return '✏️';
  if (name.includes('python')) return '🐍';
  if (name.includes('js') || name.includes('javascript')) return '📜';
  if (name.includes('vscode') || name.includes('extension')) return '🧩';
  if (desc.includes('utility') || desc.includes('tool')) return '🧰';
  return '🌟';
}
